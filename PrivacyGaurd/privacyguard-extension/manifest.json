{
  "manifest_version": 3,
  "name": "PrivacyGuard AI",
  "version": "4.0",
  "description": "AI-powered privacy policy analyzer (0-100 scoring)",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:5000/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
