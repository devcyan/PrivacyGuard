{
  "manifest_version": 3,
  "name": "PrivacyGuard AI",
  "version": "4.0",
  "description": "AI-powered privacy policy analyzer (0-100 scoring)",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "http://localhost:5000/*",
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}